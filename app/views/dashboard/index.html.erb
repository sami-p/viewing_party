


<section class="friends">
  <%= form_with model: @friendships, method: :post, local: true do |f| %>
    <%= f.text_field :search, id: :search, :value => "Friend's Email" %>
    <%= f.submit "Add Friend" %>
  <% end %>
  <h3>Friends</h3>
  <% if current_user.friends.empty? %>
    <p>You currently have no friends.</p>
  <% else %>
    <% current_user.friends.each do |friend| %>
      <p><%= friend.username %></p>
    <% end %>
  <% end %>
</section>

<section class="parties">
  <h3>Parties You Are Invited To:</h3>
  <% current_user.parties.each do |party| %>
    <span>Party Movie: <span><%= party.movie_title %>
    <br>
    <span>Date: <span><%= party.start_time.strftime("%A, %B %d, %Y") %>
  <% end %>
  <h3>Parties You Are Hosting:</h3>
  <% Party.parties_by_host(current_user).each do |party| %>
    <span>Party Movie: <span><%= party.movie_title %>
    <br>
    <span>Date: <span><%= party.start_time.strftime("%A, %B %d, %Y") %>
  <% end %>
</section>
