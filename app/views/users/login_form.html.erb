<h1>Please Login</h1>
<div align="center" class="mb-3">
  <%= form_with url: login_path, method: :post, local: true do |form| %>
    <%= form.label :username, "Username:", class:"white_text" %>
    <%= form.text_field :username, id: :username %>
    <br>
    <br>
    <%= form.label :password, "Password:", class:"white_text" %>
    <%= form.password_field :password %>
    <br>
    <br>
    <%= form.submit "Log In", class:"btn btn-outline-light navbar-custom white_text" %>
  <% end %>
</div>