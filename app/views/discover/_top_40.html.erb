<p>Top Movies</p>

<table class="table table-striped">
  <table class="table table-striped navbar-custom">
  <thead class="custom" text-align="center" align="center">
    <tr>
      <th  colspan="4" style="font-family: Quicksand;">Top Movies (1 - 20)</th>
    </tr>
  </thead >
  <tbody id="top-movies">
    <tr id="movie-table-headers">
      <th>Rank</th>
      <th>Title</th>
      <th>Average Vote</th>
    </tr>
    <% @movies1.each_with_index do |m, idx| %>
        <td><%= "#{idx + 1}" %></td>
        <td><%= m.title %></td>
        <td><%= m.vote_average %></td>
      </tr>
    <% end %>
  </tbody>
</table>

